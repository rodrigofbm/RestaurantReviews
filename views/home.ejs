</head>
<body>
 	<div class="container">
 		<button id="gone" onclick={signInWithGoogle()} class="btn btn-outline-secondary" >Sign In With Google</button>
 		<div class="row"  id="ifLoggedIn" >
 			<div class="col s12">
		 		<ul class="collection">
				    <li class="collection-item avatar">
				      <img id="google-pic" src="" alt="" class="circle">
				      <span class="title" ><h5 id="google-displayname"></h5></span>
				    </li>
				</ul>
				<button  id="signout" type="button" class="btn btn-dark" onclick={signOut()} >Sign Out</button>

				<h1>Voting APP</h1>
				<div class="input-group mb-3">
				  <input id="addRestaurant" type="text" class="form-control" placeholder="Add Restaurant" aria-label="Recipient's username" aria-describedby="basic-addon2">
				  <div class="input-group-append">
				    <button class="btn btn-outline-secondary" type="button" onclick={addRestaurant()} >Add</button>
				  </div>
				</div>
			</div>

			<% var keys = Object.keys(restaurants) %>
			<% keys.forEach((key) => {%>
				<% var allUsers; %>
				<% if(restaurants[key].votes) {%>
					<% allUsers = Object.keys(restaurants[key].votes) %>
				<% }else {  %>
					<% allUsers = [] %>
				<% }%>
		        <div class="col s6 m6">
		          <div class="card blue-grey darken-1">
		            <div class="card-content white-text">
		              <span class="card-title"><%= restaurants[key].name %></span>
		              <p><%= allUsers.length %></p>
		            </div>
		            <div class="card-action">
		             	<button onclick={upvote("<%= key %>")} type="button" class="btn btn-primary">Vote <i class="material-icons">arrow_upward</i></button>
						<button onclick={downvote("<%= key %>")} type="button" class="btn btn-primary">Vote <i class="material-icons">arrow_downward</i></button>
		            </div>
		          </div>
		        </div>
	        <% }) %>
      	</div>
	</div>

	<script src="js/firebaseAuth.js" > </script>
	<script src="js/firebaseVoting.js" > </script>
	
	<!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
          
 
</body>
</html>